# CredentialMate Terraform Variables
# Copy this file to terraform.tfvars and fill in your values
# DO NOT commit terraform.tfvars to git

aws_region  = "us-east-1"
environment = "production"

# VPC Configuration (10.1.0.0/16 - separate from karematch 10.0.0.0/16)
vpc_cidr = "10.1.0.0/16"

# Database Configuration
db_name     = "credentialmate"
db_username = "credentialmate"

# EC2 Configuration
instance_type = "t3.micro" # Budget Plan

# SSH Key Pair (create with: aws ec2 create-key-pair --key-name credentialmate-key)
key_pair_name = "credentialmate-key"

# SSL Certificate ARN (already created)
ssl_certificate_arn = "arn:aws:acm:us-east-1:051826703172:certificate/ba7178ef-07ab-49c1-a2ce-f5ae69e1b88c"
